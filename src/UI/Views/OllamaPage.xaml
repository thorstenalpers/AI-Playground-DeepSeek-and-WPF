<Page
    x:Class="DeepSeek.WPF.UI.Views.OllamaPage"
    Style="{DynamicResource MahApps.Styles.Page}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:properties="clr-namespace:DeepSeek.WPF.UI.Properties"
	xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
	xmlns:vm="clr-namespace:DeepSeek.WPF.UI.ViewModels"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">
	<Grid Grid.Row="1"
      Margin="{StaticResource MediumLeftRightMargin}"
      Background="{DynamicResource MahApps.Brushes.Gray10}">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="4*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<DockPanel Grid.Row="0" Margin="0,10,0,10" LastChildFill="False">
			<TextBlock Text="Select the model:" 
               FontWeight="Bold"
               VerticalAlignment="Center"
               Margin="0,0,10,0" />
			<ComboBox x:Name="ModelSelectorComboBox"
              Width="200"
              SelectedItem="{Binding SelectedModel}"
              ItemsSource="{Binding AvailableModels}"
              Margin="0,0,0,0" />
		</DockPanel>

		<Grid Grid.Row="1" Margin="0,0,0,10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<!-- Label -->
				<ColumnDefinition Width="*" />
				<!-- TextBox stretches here -->
				<ColumnDefinition Width="Auto" />
				<!-- Send Button -->
			</Grid.ColumnDefinitions>

			<TextBlock Text="Ask something:" 
               FontWeight="Bold"
               VerticalAlignment="Center"
               Margin="0,0,10,0"
               Grid.Column="0" />

			<TextBox x:Name="UserInputTextBox"
             VerticalAlignment="Stretch"
             Margin="10,0,10,0"
             Height="Auto"
             AcceptsReturn="True"
             VerticalScrollBarVisibility="Auto"
             TextWrapping="Wrap"
             Grid.Column="1"
             mah:TextBoxHelper.Watermark="Type your question..."
             Text="{Binding UserInput, UpdateSourceTrigger=PropertyChanged}" />

			<Button x:Name="SendButton"
            Content="Send"
            Width="60"
            Height="30"
            VerticalAlignment="Center"
            Grid.Column="2"
            Command="{Binding SendCommand}" />
		</Grid>

		<!-- Row 2: Output -->
		<TextBox x:Name="OutputTextBox"
             Grid.Row="2"
             VerticalScrollBarVisibility="Auto"
             AcceptsReturn="True"
             IsReadOnly="True"
             TextWrapping="Wrap"
             FontFamily="Consolas"
             Background="#f5f5f5"
             Padding="10"
             Text="{Binding Output}" />
	</Grid>

</Page>
